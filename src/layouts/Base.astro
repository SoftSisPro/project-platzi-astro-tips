---
import "./src/styles/global.css";

export interface Props {
	title?: string;
	frontmatter?: {
		title?: string;
	};
}
// Modifica esta línea para manejar también el frontmatter
const { title = Astro.props.frontmatter?.title || "Untitled" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="h-screen">
		<slot />
	</body>
</html>
